{
  "manifest_version": 3,
  "name": "Thai Lottery - ตรวจหวย วิเคราะห์เลขเด็ด",
  "version": "1.4.1",
  "description": "ตรวจผลสลากกินแบ่งรัฐบาล ดูผลย้อนหลัง วิเคราะห์สถิติ กราฟ และคำนวณเลขเด็ด",
  "permissions": ["storage", "alarms"],
  "host_permissions": [
    "https://lotto.api.rayriffy.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
